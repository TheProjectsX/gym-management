{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 20",
    "_version": "20.1.0",

    "compilerOptions": {
        "lib": ["es2023"],
        "module": "nodenext",
        "target": "es2022",
        "outDir": "./dist",
        "rootDir": "./src",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
