{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "outDir": "./dist",
        "rootDir": "./src",
        "types": ["node"],
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
